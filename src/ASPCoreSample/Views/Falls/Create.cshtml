@model ASPCoreSample.Models.Falls

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Create a new Water Fall: </h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="open_to_public" class="col-md-2 control-label"></label>
            <div class="col-md-2">
                <select class="form-control" asp-for="open_to_public">
                    <option class="form-control" value="y">Yes</option>
                    <option class="form-control" value="n">No</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea class="form-control" asp-for="description" rows="5" cols="40"></textarea>
                <span asp-validation-for="description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="confirmed_date" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="confirmed_date" class="form-control" />
                <span asp-validation-for="confirmed_date" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a asp-controller="Falls" asp-action="Create"></a>
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="Falls" asp-action="Index"><i class="fa fa-chevron-left" aria-hidden="true"></i>Back</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
